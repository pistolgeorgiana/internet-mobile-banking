<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_account_tv_current_account"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/lv_radius_border"
        />

    <ImageView
        android:id="@+id/lv_account_iv_money"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/lv_account_tv_new_transfer"
        android:layout_below="@id/lv_account_tv_current_account"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/light_gray"
        android:src="@drawable/money_icon" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:id="@+id/lv_account_tv_name"
        android:background="@color/light_gray"
        android:layout_below="@id/lv_account_tv_current_account"
        android:layout_toRightOf="@id/lv_account_iv_money"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_account_tv_amount"
        android:background="@color/light_gray"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:layout_below="@id/lv_account_tv_name"
        android:layout_toRightOf="@id/lv_account_iv_money" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/ly_radius_border_transfer"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"
        android:id="@+id/lv_account_tv_new_transfer"
        android:layout_below="@id/lv_account_tv_amount"
        android:text="@string/lv_account_view_new_transfer"
        />
</RelativeLayout>